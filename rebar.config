%% vim: set filetype=erlang : -*- erlang -*-

{erl_opts, [
            warnings_as_errors,
            warn_export_all
           ]}.

{xref_checks, [
               fail_on_warning,
               undefined_function_calls
              ]}.

{clean_files, [".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [
             {doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.
{validate_app_modules, true}.

{eunit_opts, [
              no_tty,
              {report, {eunit_progress, [colored, profile]}}
             ]}.

{sub_dirs, [
            "examples/wslogi_example"
           ]}.

{lib_dirs, [
            "examples"
           ]}.

{deps,
  [
   {meck,             ".*", {git, "git://github.com/eproxus/meck.git",            {tag,    "0.8.2"}}},
   {reloader,         ".*", {git, "git://github.com/sile/reloader.git",           {branch, "master"}}},
   {edown,            ".*", {git, "git://github.com/dwango/edown.git",            {branch, "master"}}},
   {eunit_formatters, ".*", {git, "git://github.com/seancribbs/eunit_formatters", {branch, "master"}}},
   {moyo,             ".*", {git, "git://github.com/dwango/moyo.git",             {tag,    "v1.0.0"}}},
   {cowboy,           ".*", {git, "git://github.com/ninenines/cowboy.git",        {tag,    "1.0.1"}}},
   {gproc,            ".*", {git, "git://github.com/uwiger/gproc.git",            {tag,    "0.3.1"}}}
  ]}.
